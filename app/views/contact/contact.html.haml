- content_for :title, 'Contact'
.container
  %h1 Contact Us
  .card
    .row
      /.large-10.col-sm-12.columns
      = form_tag(:feedback_email_link, :method => "post") do
        .row
          %dl.dl-horizontal
            %dt= label_tag(:sender, "Reply To:")
            %dd= text_field_tag :sender, @user_email, class: 'form-control'

            %dt= label_tag(:subject, "Subject:")
            %dd= text_field_tag :subject, nil, :placeholder => "Enter subject...", class: 'form-control'

            %dt.body= label_tag(:body, "Message:")
            %dd= text_area_tag :body, nil, :placeholder => "Enter feedback...", :rows => 10, class: 'form-control'

        = submit_tag "Send Message", class: 'btn btn-primary'
